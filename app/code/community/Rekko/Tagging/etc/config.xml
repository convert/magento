<?xml version="1.0" encoding="UTF-8"?>
<config>
  <modules>
    <Rekko_Tagging>
      <version>1.0.0</version> <!-- the version of module resources -->
    </Rekko_Tagging>
  </modules>
  <global> <!-- global scope, also known as the default configuration area -->
    <blocks>
      <rekko>
        <class>Rekk_Tagging_Block</class>
      </rekko>
    </blocks> 
    <helpers> <!-- a definition of the module helpers namespace -->
      <rekko>
        <class>Rekko_Tagging_Helper</class>
      </rekko>
    </helpers>
    <resources>
      <rekko_setup>
        <setup>
          <module>Rekko_Tagging</module>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
      </rekko_setup>
      <rekko_write>
        <connection>
          <use>core_write</use>
        </connection>
      </rekko_write>
      <rekko_read>
        <connection>
          <use>core_read</use>
        </connection>
      </rekko_read>
    </resources>
  </global>
  <frontend>
    <layout>
      <updates>
        <rekko>
          <file>rekko.xml</file>
        </rekko>
      </updates>
    </layout>
  </frontend>
  
  <default>
    <rekko_section>
      <rekko_group>
        <enabled>1</enabled>
      </rekko_group>
    </rekko_section>
  </default>
  <admin>
    <routers>
      <rekkotagging>
        <use>admin</use>
        <args>
          <module>Rekko_Tagging</module>
          <frontName>rekko</frontName>
        </args>
      </rekkotagging>
    </routers>
  </admin>
  <adminhtml>
    <layout>
      <updates>
        <gtspeed>
          <file>rekko.xml</file>
        </gtspeed>
      </updates>
    </layout>
  </adminhtml>
  
</config>
